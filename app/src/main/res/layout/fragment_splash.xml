<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SplashFragment"
    android:background="@color/yellow"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivSplashImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.7"
        android:src="@drawable/ic_geography_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvNameSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Play With Lessons"
        android:textSize="35sp"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"
        android:fontFamily="@font/sketchzone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSplashImage" />

</androidx.constraintlayout.widget.ConstraintLayout>